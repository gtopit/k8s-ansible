{% set local_ip = inventory_hostname %}
KUBE_APISERVER_OPTS="--logtostderr=false \
--v=2 \
--log-dir={{ k8s_work_dir }}/logs \
--etcd-servers={% for host in groups['etcd'] %}https://{{ hostvars[host].inventory_hostname }}:2379{% if not loop.last  %},{% endif %}{% endfor %} \
--bind-address={{ local_ip }} \
--secure-port=6443 \
--advertise-address={{ local_ip }} \
--allow-privileged=true \
--service-cluster-ip-range={{ service_cidr }} \
--service-node-port-range={{ service_nodeport_range }} \
--enable-admission-plugins=NamespaceLifecycle,LimitRanger,ServiceAccount,ResourceQuota,NodeRestriction \
--authorization-mode=RBAC,Node \
--enable-bootstrap-token-auth=true \
--token-auth-file={{ k8s_work_dir }}/conf/token.csv \
--tls-cert-file={{ k8s_work_dir }}/pki/apiserver.pem  \
--kubelet-client-certificate={{ k8s_work_dir }}/pki/apiserver.pem \
--kubelet-client-key={{ k8s_work_dir }}/pki/apiserver-key.pem \
--tls-private-key-file={{ k8s_work_dir }}/pki/apiserver-key.pem \
--client-ca-file={{ k8s_work_dir }}/pki/ca.pem \
--service-account-key-file={{ k8s_work_dir }}/pki/ca-key.pem \
--etcd-cafile={{ etcd_work_dir }}/pki/ca.pem \
--etcd-certfile={{ etcd_work_dir }}/pki/etcd.pem \
--etcd-keyfile={{ etcd_work_dir }}/pki/etcd-key.pem \
--audit-log-maxage=30 \
--audit-log-maxbackup=3 \
--audit-log-maxsize=100 \
--audit-log-path={{ k8s_work_dir }}/logs/k8s-audit.log"
